<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F3EB"
    tools:context=".activity.ProductListActivity">

    <Button
        android:id="@+id/homeBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#05BDA5"
        android:onClick="onClickHome"
        android:text="Home" />

    <Button
        android:id="@+id/backBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#05BDA5"
        android:onClick="onClickBack"
        android:text="Back" />

    <TextView
        android:id="@+id/lableStores"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeBut"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="sans-serif-medium"
        android:text="Predicted Products"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#034B43"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <ListView
        android:id="@+id/storesList"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_below="@+id/lableStores"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/getStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storesList"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#05BDA5"
        android:backgroundTintMode="src_over"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickItem"
        android:text="Get Item" />

    <Button
        android:id="@+id/searchStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storesList"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#05BDA5"
        android:backgroundTintMode="src_over"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickSearch"
        android:text="Search Stores" />




</RelativeLayout>